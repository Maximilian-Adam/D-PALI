<?xml version="1.0" encoding="utf-8"?>
<mujoco>
    <!--Options stuff (look into more)-->
    <compiler angle="radian"
              meshdir="../meshes"
              balanceinertia="true"
              discardvisual="false"
              autolimits="true"/>
    <option solver="PGS" impratio="0.5" cone="elliptic" tolerance="1e-7" noslip_iterations="10000" timestep="0.002" gravity = "0 0 -9.81">
        <flag warmstart="enable"/>
    </option>


    <include file="Shared3D.xml"/>

    <worldbody>

      <body name="workspace" pos="0 0 0" euler="0 1.5708 0">    <!-- rotate 90° about Y -->
            <body pos="0 0 0" euler="0 0 -1.5708">  <!-- then 90° about Z -->
                <!--adds the floor and platform-->
                
                <!--<geom name="floor" pos="0 0 -0.1" size="15 15 1" type="plane" material="matplane" margin="0.001" condim="3" friction="1 0.005 0.0001" />
                <body name="floor" pos="0 0 -0.1"/>-->

                <!--white platform-->
                <!--<geom name="table" class="platform" type="box" size=".08 .08 .05" pos="0 0.15 -0.05" rgba="1.5 1.5 1.5 0.5"/> -->

                <!--pink platform-->
                <geom name="table2" class="platform" type="box" size=".08 .01 .1" pos="0 0.18 0.0" rgba="1.5 1 1.5 0.5"/>

                <!--This line adds the robot-->
                <include file="Gripper3D.xml"/>
            </body>
        </body>

        <!--Sets up cube -->
        <body name="object" pos="0.015 0 -0.15" euler="0 0 1.5708 ">
            <joint name="object:joint" type="free" damping="0.01"/>
            <geom name="object" class='object' size="0.015 0.015 0.015" rgba="0.125 0.785 0.785 0.5" />
            <geom name="object_arrow" type="box" size=".002 .012 .016" rgba="1 0 0 1" class="visual"
                      group="1"/>
            <geom name="object_arrow2" type="box" pos="0.0036 0.0084 0.001" quat="1 0 0 0.5" size=".002 .006 .015"
                      rgba="1 0 0 1" class="visual" group="1"/>
            <geom name="object_arrow3" type="box" pos="-0.0036 0.0084 0.001" quat="1 0 0 -0.5" size=".002 .006 .015"
                      rgba="1 0 0 1" class="visual" group="1"/>

            <site name="object:site" pos="0 0 0" rgba="1 1 0 1" size="0.005" />
            <site name="object:site_L" pos="-0.028 0 0" rgba="0 1 1 1" size="0.003" />
            <site name="object:site_R" pos=" 0.028 0 0" rgba="0 0 1 1" size="0.003" />
		</body>


        <!-- Sets up target (shadow) cube-->
        <body name="target" pos="0.015 -0.04 -0.155" euler="0 0 1.5708 ">
            <!-- <joint name="target:joint" type="free" damping="0.01"/> -->
            <geom name="target" type="box" size="0.015 0.015 0.015" rgba="0.8 0 0.8 0.2" group="1" condim="4" contype="0"
                  conaffinity="0"/>
            <body name="target:arrow_marker" pos="0 0 0.001">
                <geom name="target:center1" type="cylinder" pos="0 0 0.001" size="0.002 .015" class="visual" rgba="0.25 0.22 0.22 1" group="1"/>
                <geom name="target_arrow" type="box" size=".002 .012 .016" rgba="0.5 0 0 1" class="visual"
                      group="1"/>
                <geom name="target_arrow2" type="box" pos="0.0036 0.0084 0.001" quat="1 0 0 0.5" size=".002 .006 .015"
                      rgba="0.5 0 0 1" class="visual" group="1"/>
                <geom name="target_arrow3" type="box" pos="-0.0036 0.0084 0.001" quat="1 0 0 -0.5" size=".002 .006 .015"
                      rgba="0.5 0 0 1" class="visual" group="1"/>
            </body>
        </body>

        <light directional="true" diffuse="0.3 0.3 0.3" specular="0.3 0.3 0.3" castshadow="true" pos="0.1 0.1 0.1"
               dir="0.2 0.1 -0.1"/>
    </worldbody>

</mujoco>