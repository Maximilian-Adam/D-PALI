<?xml version="1.0" encoding="utf-8"?>
<mujoco>
    <!--Options stuff (look into more)-->
    <compiler angle="radian"
              meshdir="meshes"
              balanceinertia="true"
              discardvisual="false"
              autolimits="true"/>
    <option solver="PGS" impratio="0.5" cone="elliptic" tolerance="1e-7" noslip_iterations="10000" timestep="0.002">
        <flag warmstart="enable"/>
    </option>


    <include file="shared-Worked.xml"/>

    <worldbody>
        <!--adds the floor and platform-->
        <geom name="floor" pos="0 0 -0.1" size="15 15 1" type="plane" material="matplane" margin="0.001" condim="3" friction="1 0.005 0.0001" />
        <body name="floor" pos="0 0 -0.1"/>
        <geom name="platform" class="visual" type="box" size=".049 .049 0.05" pos="0 0.02 -0.05"
              rgba="0.25 0.22 0.22 1"/>
        <geom name="platform-edge" class="visual" type="box" size=".05 .05 0.045" pos="0 0.02 -0.05"
              rgba="1.5 1.5 1.5 0.9"/>
        <geom name="table" class="platform" type="box" size=".08 .08 .05" pos="0 0.15 -0.05" rgba="1.5 1.5 1.5 1"/>

        <!--This line adds the robot-->
        <include file="Gripper-Worked.xml"/>

        <!--Sets up cube (I think)-->
        <body name="object0" pos="0 0.115 0.02">
            <joint name="object0:joint" type="free" damping="0.01"/>
            <geom name="object0" class='object' size="0.02 0.02 0.02" rgba="0.125 0.785 0.785 0.5" />
            <geom name="object0_arrow" type="box" size=".002 .012 .021" rgba="1 0 0 1" class="visual"
                      group="1"/>
            <geom name="object0_arrow2" type="box" pos="0.0036 0.0084 0.001" quat="1 0 0 0.5" size=".002 .006 .02"
                      rgba="1 0 0 1" class="visual" group="1"/>
            <geom name="object0_arrow3" type="box" pos="-0.0036 0.0084 0.001" quat="1 0 0 -0.5" size=".002 .006 .02"
                      rgba="1 0 0 1" class="visual" group="1"/>

            <site name="object0:site" pos="0 0 0" rgba="1 1 0 1" size="0.005" />
            <site name="object0:site_L" pos="-0.028 0 0" rgba="0 1 1 1" size="0.003" />
            <site name="object0:site_R" pos=" 0.028 0 0" rgba="0 0 1 1" size="0.003" />
		</body>

        <!-- Sets up target (shadow) cube-->
        <body name="target:show_ori" pos="0 0 -0.2">
            <joint name="joint:target" type="free" damping="0.01"/>
            <geom name="target" type="box" size=".02 .02 .02" rgba="0.8 0 0.8 0.2" group="1" condim="4" contype="0"
                  conaffinity="0"/>
            <body name="target_arrow_marker" pos="0 0 0.001">
                <geom name="target:center1" type="cylinder" pos="0 0 0.001" size="0.002 .02" class="visual" rgba="0.25 0.22 0.22 1" group="1"/>
                <geom name="target_arrow" type="box" size=".002 .012 .02" rgba="0.5 0 0 1" class="visual"
                      group="1"/>
                <geom name="target_arrow2" type="box" pos="0.0036 0.0084 0" quat="1 0 0 0.5" size=".002 .006 .02"
                      rgba="0.5 0 0 1" class="visual" group="1"/>
                <geom name="target_arrow3" type="box" pos="-0.0036 0.0084 0" quat="1 0 0 -0.5" size=".002 .006 .02"
                      rgba="0.5 0 0 1" class="visual" group="1"/>
            </body>
        </body>

        <light directional="true" diffuse="0.3 0.3 0.3" specular="0.3 0.3 0.3" castshadow="true" pos="0.1 0.1 0.1"
               dir="0.2 0.1 -0.1"/>
    </worldbody>

</mujoco>

